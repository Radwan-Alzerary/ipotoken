<div>
  <h1 class="text-3xl font-bold mb-6">إدارة المسؤولين</h1>
  
  <div class="bg-white p-6 rounded shadow mb-8">
    <h2 class="text-2xl font-semibold mb-4">إضافة مسؤول جديد</h2>
    <form action="/admin/add" method="POST" class="space-y-4">
      <div>
        <label class="block text-gray-700">اسم المستخدم</label>
        <input type="text" name="username" required class="w-full px-3 py-2 border rounded" />
      </div>
      <div>
        <label class="block text-gray-700">كلمة المرور</label>
        <input type="password" name="password" required class="w-full px-3 py-2 border rounded" />
      </div>
      <div>
        <label class="block text-gray-700">الدور</label>
        <select name="role" class="w-full px-3 py-2 border rounded">
          <option value="admin">مسؤول</option>
          <option value="superadmin">سوبر مسؤول</option>
        </select>
      </div>
      <button type="submit" class="bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-600">إضافة المسؤول</button>
    </form>
  </div>
  
  <div class="bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-semibold mb-4">قائمة المسؤولين</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-4 py-2 text-right text-sm font-medium text-gray-600">اسم المستخدم</th>
            <th class="px-4 py-2 text-right text-sm font-medium text-gray-600">الدور</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% admins.forEach(admin => { %>
            <tr>
              <td class="px-4 py-2"><%= admin.username %></td>
              <td class="px-4 py-2"><%= admin.role %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
